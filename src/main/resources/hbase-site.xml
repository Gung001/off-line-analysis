<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

	<property>
		<name>hbase.rootdir</name>
		<value>hdfs://data01/hbase</value>
	</property>

	<property>
		<name>hbase.cluster.distributed</name>
		<value>true</value>
	</property>

	<!--指定Zookeeper的地址实例-->
	<property>
		<name>hbase.zookeeper.quorum</name>
		<value>data01</value>
	</property>
	
</configuration>
